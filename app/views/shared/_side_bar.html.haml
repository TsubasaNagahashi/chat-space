.chat-side 
  .side-header
    .side-header_box
      %h3.side-header_box_user-name
        = current_user.name 
      .side-header_box_menu
        .side-header_box_menu_new-group
          =link_to new_group_path, class: "side-header_box_menu_new-group" do
            = fa_icon 'edit', class: "side-header_box_menu_new-group--icon"
        .side-header_box_menu_edit-user
          =link_to edit_user_path(current_user), class: "side-header_box_menu_edit-user" do
            = fa_icon 'cog', class: "side-header_box_menu_edit-user--icon"
    .groups
      - current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group) do
            .group_group-name
              = group.name
            .group_latest-message 
              = group.show_last_message